mixin sGetCandle(data)
	// start sGetCandle
	+b.SECTION.sGetCandle.section#sGetCandle&attributes(attributes)
		.container 
			+e.wrapRow.row
				.col-lg-6
					+e.item
						+e.title
							+icon('icon-2')
							| Выбрать размер свечи:
					+e.row.row
						mixin item(i, t, p)
							+e.col.col-sm
								+b.LABEL.Check-block--img
									input(type="checkbox")
									+pic(`candle-${i}.png`,'',0).d-none.d-sm-block
									+e.title= t
									+e.text.d-sm-none= p
									+e.lab
								+b.block-add
									button -
									input(type="number" value='1' )
									button +
						+item(`1`,`Малая`,`12-15 см`)
						+item(`2`,`Средняя`,`20-22 см`)
						+item(`3`,`Большая`,`28-30 см`)
						+item(`4`,`Алтарная`,`30-40 см`)
						+item(`5`,`33 свечи`,`20-22 см`)
								
						

				+e.rcol.col-lg-6
					+e.item
						+e.title
							+icon('icon-2')
							| Выбрать место:
						.row
							mixin item( t)
								.col-auto
									+b.LABEL.Check-block--text
										input(type="checkbox")
										+e.title= t
										+e.lab
							+item('В монастырь')
							+item('К иконе')
							+item('К святому')
							+item('К празднику')
							+item('В Израиль')
							+item('На Афон')
					+e.item
						+e.title
							+icon('icon-2')
							| Выбрать молитву:
						.row
							mixin item( t)
								.col-sm-auto
									+b.LABEL.Check-block--text
										input(type="checkbox")
										+e.title= t
										+e.lab
							+item('За здравие')
							+item('За упокой')
							+item('Благодарственная')
	// end sGetCandle