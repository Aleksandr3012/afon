										+input('Добавьте имя в Р.п.')
										+input('Добавьте имя в Р.п.')
										+input('Добавьте имя в Р.п.')
										+input('Добавьте имя в Р.п.')
							.col-lg-7
								+e.imgWrap
									+pic('notesImg.jpg','','')
								+e.title Сорокоуст об упокоении в Дивеево
								+e.imgSm
									.row
										mixin img
											.col-3.col-md
												+pic('diveevo.jpg','','')
										+img
										+img
										+img
										+img
