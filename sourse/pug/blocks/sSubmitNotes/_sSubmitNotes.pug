			input(class='utm_campaign' name='utm_campaign' type="hidden")
			.container
				+e.innerWrap
					+e.inner
						+e.row.row
							.col-lg.order-lg-last
								+e.nameWrap
									+e.nameForm.text-center
										+e.name Введите имена
										+e.pic
