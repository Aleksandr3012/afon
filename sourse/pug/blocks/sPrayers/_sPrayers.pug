mixin prayerItemImg(img,t)
	+e.col.col-lg-6.order-1
		+b.prayerItem.text-center(href="#")&attributes(attributes)
			+e.wrap
				<picture class="picture-bg"> 
					<img class="object-fit-js" src="img/@2x/prayer-bg-0.png" alt="" loading="lazy">
				</picture>
				+icon('icon')
				+e.title!= t

