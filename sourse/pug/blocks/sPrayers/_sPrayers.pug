mixin sPrayers(data)
	// start sPrayers
	+b.SECTION.sPrayers.section#sPrayers&attributes(attributes)
		.container
			+b.section-title.text-center
				h3 Молебны о помощи
				
			.row
				+prayerItem('1.jpg','молебен здравствующим').border-secondary
				+prayerItem('2.jpg','Какие бывают записки?')
				+prayerItem('3.jpg',`молебен<br> усопшим`).border-secondary
				+prayerItem('4.jpg','Как работает сервис святой афон?')
	// end sPrayers

mixin prayerItem(img,t)
	+e.col.col-lg-6.order-1
		+b.prayerItem.text-center(href="#")&attributes(attributes)
			+e.wrap
				+pic(`prayer-bg-${img}`,'bg')(class="picture-bg")
				+icon('icon')
				+e.title!= t


